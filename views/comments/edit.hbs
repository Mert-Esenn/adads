    <div class="container">
        {{!-- <div class="row"> --}}
        <h1 style="text-align: center;color: #fff">Düzenle</h1>
 <div style="width: 100%; margin: 25px auto;">
   <form action="/posts/{{post_id}}/comments/{{comment._id}}?_method=PUT" method="POST">
                <div class="form-group"> 
                    <input class="form-control" type="text" name="comment[text]" value="{{comment.text}}">

                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Onay</button>
                </div>
            </form>
            <a href="/posts">Geri</a>
        </div>
    </div>
